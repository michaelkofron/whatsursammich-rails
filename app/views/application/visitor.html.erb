

<html>
<head>
    <%= stylesheet_link_tag 'home_style.css', media: 'print, screen' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8">
</head>
<body>
    <div class="logo">
        <h1>whatsursammich🥪</h1>
    </div>


    
    <div class="full">
        <div class="body">
            <a id="head" href="login">
                <div class="nav">
                    <p>login</p>
                </div>
            </a> 
            <a id="head" href="signup">
                <div class="nav">
                    <p>signup</p>
                </div>
            </a>
            <div class="sort">
                <p>sort by: <a href="#">popular</a> | <a href="#">new</a></p>
                <a id="sotw" href="#">🏆sammich of the week🏆</a>
            </div>
            <% @sams.each do |sam| %>
                <div class="post">
                    <img src=<%= sam.image_url %> class="image">
                    <a id="post-title" href="<%= sam_path(sam.name.gsub!(" ", "-")) %>"><%= sam.name.gsub!("-", " ") %></a>
                    <a id="review" href="#">read & write reviews</a>
                    <p id="rating">⭐⭐⭐</p>
                    <p id="numbers">16 💬</p> 
                    <a id="by" href="<%= user_path(sam.user) %>"><%= sam.user.username %></a>
                </div>
            <% end %> 
            <div class="footer">
                <p>Made with 🥪 by Michael Kofron</p>
            </div>

        </div> 
    </div>












</body>
</html>
